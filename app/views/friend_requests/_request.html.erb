<% if current_user != user %>
  <% if current_user.received_request?(user) %>
    <%= link_to "承認", "#" %>
    <%= link_to "拒否", "#" %>
  <% elsif current_user.sent_request?(user) %>
    <%= link_to "取消", friend_request_path(user), method: :delete %>
  <% else %>
    <%= link_to "友達申請", friend_requests_path({user_id: user.id}), method: :post %>
  <% end %>
<% end %>
