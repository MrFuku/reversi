
<div class="sign-in-user">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>ログイン</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", object: f.object %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>

        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>ログイン状態を維持する</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>

      <p><%= link_to "新規ユーザーを作成", "#{}" %></p>
      <p><%= link_to "パスワードを忘れた", "#{}" %></p>

      <button type="button" name="button" class="samplebtn" onclick="sampleLogin()">サンプルユーザーでログイン</button>
    </div>
  </div>
</div>
