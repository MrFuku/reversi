<div class="password-reset">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>パスワード再設定</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", object: f.object %>
        <%= f.hidden_field :reset_password_token %>

        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "new-password" %>

        <%= f.label :password_confirmation, "パスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>

        <%= f.submit "再設定", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
